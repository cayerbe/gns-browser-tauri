{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "GNS Browser",
  "version": "1.0.1",
  "identifier": "com.gcrumbs.browser",
  "build": {
    "beforeDevCommand": "echo skipped",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "echo skipped",
    "frontendDist": "../ui/dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "GNS Browser",
        "width": 420,
        "height": 800,
        "minWidth": 360,
        "minHeight": 640,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' https: data:; connect-src 'self' https://api.gcrumbs.com https://app.gcrumbs.com wss://relay.gcrumbs.com https://gns-browser-production.up.railway.app",
      "dangerousDisableAssetCspModification": false
    }
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "targets": "all",
    "resources": [
      "resources/offline.html"
    ],
    "category": "Utility",
    "shortDescription": "Browse the Identity Web",
    "longDescription": "GNS Browser is your gateway to the decentralized identity web. Claim your @handle, send encrypted messages, and prove your humanity through proof-of-trajectory.",
    "copyright": "Â© 2024 Globe Crumbs",
    "iOS": {
      "minimumSystemVersion": "13.0",
      "infoPlist": "Info.iOS.plist"
    },
    "android": {
      "minSdkVersion": 26
    },
    "macOS": {
      "minimumSystemVersion": "10.15",
      "entitlements": null,
      "exceptionDomain": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "http://timestamp.digicert.com"
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}